---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: simple-centos1
  labels:
    app: many
spec:
  replicas: 6
  selector:
    matchLabels:
      app: many
  template:
    metadata:
      labels:
        app: many
    spec:
      containers:
      - name: simple-centos1
        image: centos:8
        command: ["/bin/sleep", "10000"]
        securityContext:
          privileged: true
